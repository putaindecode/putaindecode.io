mixin Avatar(author, tooltip)
  -var gravatar = contributors.map[author.login].gravatar_id || "default"
  -var className = ""
  -if (tooltip)
    -className += "rcp-Tooltip rcp-Tooltip--bottom"
  a(href="#{getAuthorUri(author)}", data-rcp-tooltip="#{author.login}", class="#{attributes.class} #{className}")
    img(
      class="putainde-Avatar js-AnimateLoad"
      src="http://www.gravatar.com/avatar/#{gravatar}.png"
      alt=""
    )
